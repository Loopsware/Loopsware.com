---
import { translations } from '../translations';
let lang: string = Astro.props.lang || 'en';
---

<div class="flex flex-col lg:grid lg:grid-cols-2 mx-4 md:mx-8 lg:mx-16">
    <div class="w-full h-4/5 xl:w-11/12 border-3 border-gray-200 rounded-2xl p-6 md:p-10 lg:p-8 my-4 md:my-0">
        <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-bold">
            {translations[lang].services.serviceOne.titleLineOne} <br class="block md:hidden lg:block" />
            {translations[lang].services.serviceOne.titleLineTwo}
        </p>
        <p style={{"font-family": "Telegraf", "font-style": "medium"}} class="text-md lg:text-lg my-2">
            {translations[lang].services.serviceOne.subtitle} 
        </p>
        <div class="flex justify-between items-center my-4">
            <div class="flex flex-col">
                <div class="w-4 h-4 md:w-6 md:h-6 bg-lime-200">
                    <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-black -translate-x-1 -translate-y-3">1</p>
                </div>
                <div class="flex flex-col w-20 h-20 md:w-24 md:h-24 justify-center items-center">
                    <img width="50" height="50" src="/images/planning_3d.png" />
                    <p style={{"font-family": "Telegraf", "font-style": "bold"}} class="text-sm lg:text-md font-black">
                    {translations[lang].services.serviceOne.items.planning}
