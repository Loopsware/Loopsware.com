---
import { translations } from '../translations';
let lang: string = Astro.props.lang || 'en';
---

<div class="flex flex-col lg:grid lg:grid-cols-2 mx-4 md:mx-8 lg:mx-16">
    <div class="w-full xl:w-11/12 border-3 border-gray-200 rounded-2xl p-6 md:p-10 lg:p-8 my-4 md:my-0">
        <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-bold">
            {translations[lang].services.serviceOne.titleLineOne} <br class="block md:hidden lg:block" />
            {translations[lang].services.serviceOne.titleLineTwo}
        </p>
        <p style={{"font-family": "Telegraf", "font-style": "medium"}} class="text-md lg:text-lg my-2">
            {translations[lang].services.serviceOne.subtitle} 
        </p>
        <div class="flex justify-between items-center mt-12">
            <div class="flex flex-col">
                <div class="w-4 h-4 md:w-6 md:h-6 bg-lime-200">
                    <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-black -translate-x-1 -translate-y-3">1</p>
                </div>
                <div class="flex flex-col w-20 h-20 md:w-24 md:h-24 justify-center items-center">
                    <img width="50" height="50" src="/images/planning_3d.png" />
                    <p style={{"font-family": "Telegraf", "font-style": "bold"}} class="text-sm lg:text-md font-black">
                    {translations[lang].services.serviceOne.items.planning}
                    </p>
                </div>
            </div>
            <div class="flex flex-col">
                <div class="w-4 h-4 md:w-6 md:h-6 bg-lime-200">
                    <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-black -translate-x-1 -translate-y-3">2</p>
                </div>
                <div class="flex flex-col w-20 h-20 md:w-24 md:h-24 justify-center items-center">
                    <img width="60" height="60" src="/images/uidesign_3d.png" />
                    <p style={{"font-family": "Telegraf", "font-style": "bold"}} class="text-sm lg:text-md font-black">
                    {translations[lang].services.serviceOne.items.design}
                    </p>
                </div>
            </div>
            <div class="flex flex-col">
                <div class="w-4 h-4 md:w-6 md:h-6 bg-lime-200">
                    <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-black -translate-x-1 -translate-y-3">3</p>
                </div>
                <div class="flex flex-col w-20 h-20 md:w-24 md:h-24 justify-center items-center">
                    <img width="60" height="60" src="/images/development_3d.png" />
                    <p style={{"font-family": "Telegraf", "font-style": "bold"}} class="text-sm md:text-md font-black">
                    {translations[lang].services.serviceOne.items.development}</p>
                </div>
            </div>
                <div class="flex flex-col">
                    <div class="w-4 h-4 md:w-6 md:h-6 bg-lime-200">
                        <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-black -translate-x-1 -translate-y-3">4</p>
                    </div>
                    <div class="flex flex-col w-20 h-20 md:w-24 md:h-24 justify-center items-center">
                        <img width="60" height="60" src="/images/publishing_3d.png" />
                        <p style={{"font-family": "Telegraf", "font-style": "bold"}} class="text-sm md:text-md font-black">
                        {translations[lang].services.serviceOne.items.publishing}
                        </p>
                    </div>
                </div>
            </div>
    </div>
    <div class="flex w-full h-4/6 border-3 border-gray-200 rounded-2xl p-6 md:p-10 lg:p-8 my-4 md:my-0">
        <img class="xl:w-36 xl:h-48 mr-4" src="/images/styling_hands.png" alt="Styling logos and hands" />
        <span class="flex flex-col">
            <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-bold">
            {translations[lang].services.serviceThree.titleLineOne} <br class="block md:hidden lg:block" />
            {translations[lang].services.serviceThree.titleLineTwo}
        </p>
        <p style={{"font-family": "Telegraf", "font-style": "medium"}} class="text-md lg:text-lg my-2">
            {translations[lang].services.serviceThree.subtitle} 
        </p>
        </span>
    </div>
    <div class="flex w-full h-3/5 lg:w-11/12 border-3 border-gray-200 rounded-2xl p-6 md:p-10 lg:p-8 my-4 md:my-10 lg:my-12">
        <span>
            <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-bold">
                {translations[lang].services.serviceTwo.titleLineOne} <br class="block md:hidden lg:block" />
                {translations[lang].services.serviceTwo.titleLineTwo}
            </p>
            <p style={{"font-family": "Telegraf", "font-style": "medium"}} class="text-md lg:text-lg my-2">
            {translations[lang].services.serviceTwo.subtitle} 
        </p>
        </span>
        <img class="xl:w-36 xl:h-36" src="/images/clapping_hands.png" alt="Clapping hands" />
    </div>
    <div class="flex w-full -translate-y-1/4">
        <div class="w-full xl:w-11/12 border-3 border-gray-200 rounded-2xl p-6 md:p-10 lg:p-8 my-4 md:my-0 mr-6">
             <img class="w-20 h-16 ml-2 xl:w-24 xl:h-20" src="/images/react_3d.png" alt="React 3D logo" />
            <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-bold mt-4">
                {translations[lang].services.serviceFour.titleLineOne}
            </p>
            <p style={{"font-family": "Telegraf", "font-style": "medium"}} class="text-md lg:text-lg my-2">
                {translations[lang].services.serviceFour.subtitleOne} 
            </p>
        </div>
        <div class="w-full xl:w-11/12 border-3 border-gray-200 rounded-2xl p-6 md:p-10 lg:p-8 my-4 md:my-0 ml-6">
            <img class="w-28 h-16 xl:w-36 xl:h-20" src="/images/modules_3d.png" alt="Kotlin & Swift 3D logos" />
            <p style={{ "font-family": "Grotesque" }} class="text-2xl md:text-3xl font-bold mt-4">
                {translations[lang].services.serviceFour.titleLineTwo} 
            </p>
            <p style={{"font-family": "Telegraf", "font-style": "medium"}} class="text-md lg:text-lg my-2">
                {translations[lang].services.serviceFour.subtitleTwo} 
            </p>
        </div>
    </div>
</div>