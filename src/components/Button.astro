---
interface Props {
	title: string;
	isBlack?: boolean;
	href: string;
}

const { href, title, isBlack = true } = Astro.props;
---

<button class=`w-44 h-14 rounded-full ${!isBlack} ${!isBlack ? 'bg-transparent' : 'bg-stone-900'} ${!isBlack ? 'border-3 border-black' : 'border-none'}`>
    <a href={href} class=`${!isBlack ? 'text-black' : 'text-white'} text-lg font-bold` >{title}</a>
</button>