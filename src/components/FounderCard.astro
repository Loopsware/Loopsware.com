---
import { translations } from '../translations';
// @ts-ignore
let lang: string = Astro.props.lang || 'en';
---

<div class="flex flex-col justify-between h-11/12 border-3 border-gray-200 rounded-2xl p-6 xl:p-8">
    <div class="flex">
        <img class="h-24 w-24 md:h-20 md:w-20 lg:h-24 lg:w-24 xl:h-28 xl:w-28 rounded-full" src="/images/oliverloops.png" alt="The founder, Oliver Lopez" />
        <div class="flex flex-col ml-4">
            <p style={{"font-family": "Telegraf", "font-size": "medium"}} class="text-md md:text-sm lg:text-md xl:text-lg text-gray-400">{translations[lang].founder.title}</p>
            <p style={{"font-family": "Telegraf", "font-size": "bold"}} class="text-xl md:text-lg lg:text-xl xl:text-3xl font-black">{translations[lang].founder.presentation}</p> 
            <div class="flex mt-3 md:mt-2">
                <a class="mr-2" href="https://linkedin.com/in/oliverloops">
                    <img class="h-11 w-11 md:h-9 md:w-9 xl:h-10 xl:w-10 border-2 border-black rounded-full p-1" src="/images/Linkedin logo.svg" alt="github logo"/>
                </a>
                <a class="mr-2" href="https://github.com/oliverloops">
                    <img class="h-11 w-11 md:h-9 md:w-9 xl:h-10 xl:w-10 border-2 border-black rounded-full p-1" src="/images/Github icons8.svg" alt="github logo"/>
                </a>
            </div>
        </div>
    </div>
    <p style={{"font-family": "Inter", "font-size": "medium"}} class="font-medium text-md xl:text-lg my-8">
        {translations[lang].founder.text}
    </p>
    <div  class="flex justify-center">
        <a href="https://cal.com/oliverloops/15min" target="_blank" class="h-12 lg:h-14 w-3/4 xl:w-3/5 bg-stone-900 rounded-full my-2 hover:opacity-90 hover:shadow-lg transition-all">
            <p style={{"font-family": "Telegraf", "font-size": "bold"}} class="text-white text-center font-bold px-4 py-3 lg:py-4">{translations[lang].founder.button}</p>
        </a>
    </div>
</div>