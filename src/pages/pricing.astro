---
//* Layout
import Layout from '../layouts/Layout.astro';
import NavBar from '../layouts/NavBar.astro';
import Footer from '../layouts/Footer.astro';
//* UI comps.
import FooterLabel from '../components/FooterLabel.astro';
---

<Layout title="Loopsware | Pricing">
    <NavBar />
    <main>
        <div class="my-20 md:my-10">
            <div class="p-6 md:p-8 lg:p-16">
                <h2 class="text-4xl md:text-5xl font-black">Pricing</h2>
				<p class="text-xl font-medium my-4">
					Choose the right price for you. <br />
                    Any questions?, Book a call for free.
				</p>
                <div class="flex flex-col lg:flex-row w-full mt-8">
                    <div class="hidden xl:flex flex-col justify-end w-5/12">
                        <img class="h-52 xl:h-72" src="/public/moneybag_3d.jpeg" alt="money bag" />
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:ml-8">
                        <div class="flex flex-col md:items-center border-3 border-gray-200 rounded-2xl p-5 md:p-8 md:mx-2 my-4 md:my-0">
                            <div class="flex flex-row-reverse w-full md:flex-col justify-around items-center">
                                <p class="font-black text-2xl xl:text-3xl md:text-center">
                                    Project <br /> from scratch
                                </p>
                                <div class="flex justify-center items-center h-20 w-20 md:h-28 md:w-28 bg-lime-200 my-8">
                                    <div class="flex flex-col items-end">
                                        <p class="font-black text-6xl md:text-7xl xl:text-8xl mt-4">$3K</p>
                                        <p class="text-lg xl:text-xl font-black">/month*</p>
                                    </div>
                                </div>
                            </div>
                            <p class="font-bold">What's included?</p>
                            <ul class="flex flex-col mt-4">
                                <li>
                                    <p class="xl:text-lg md:text-center font-medium">
                                        - Go from idea, to launch. Go from idea, to launch.
                                    </p>
                                </li>
                                <li>
                                    <p class="xl:text-lg md:text-center font-medium">
                                        - Android, iOS and Web development. Go from idea, to launch. trial.
                                    </p>
                                </li>
                            </ul>
                            <p class="text-gray-400 xl:text-lg my-8">
                                *pricing shows in USD
                            </p>
                            <button class="h-12 w-3/5 md:w-3/4 xl:w-2/3 bg-stone-900 rounded-full mb-2">
                                <a href="/" class="text-white px-4 py-2">Hire me now</a>
                            </button>   
                        </div>
                        <div class="flex flex-col md:items-center border-3 border-gray-200 rounded-2xl p-5 md:p-8 md:mx-2 my-4 md:my-0">
                            <div class="flex flex-row-reverse w-full md:flex-col justify-around items-center">
                                <p class="font-black text-2xl xl:text-3xl md:text-center">
                                    Project <br /> mantainance
                                </p>
                                <div class="flex justify-center items-center h-20 w-20 md:h-28 md:w-28 bg-lime-200 my-8">
                                    <div class="flex flex-col items-end">
                                        <p class="font-black text-6xl md:text-7xl xl:text-8xl mt-4">$2K</p>
                                        <p class="text-lg xl:text-xl font-black">/month*</p>
                                    </div>
                                </div>
                            </div>
                            <p class="font-bold">What's included?</p>
                            <ul class="flex flex-col mt-4">
                                <li>
                                    <p class="xl:text-lg md:text-center font-medium">
                                        - Go from idea, to launch. Go from idea, to launch.
                                    </p>
                                </li>
                                <li>
                                    <p class="xl:text-lg md:text-center font-medium">
                                        - Android, iOS and Web development. Go from idea, to launch. trial
                                    </p>
                                </li>
                            </ul>
                            <p class="text-gray-400 xl:text-lg my-8">
                                *pricing shows in USD
                            </p>
                            <button class="h-12 w-3/5 md:w-3/4 xl:w-2/3 bg-stone-900 rounded-full mb-2">
                                <a href="/" class="text-white px-4 py-2">Hire me now</a>
                            </button>   
                        </div>
                        <div class="flex flex-col justify-between">
                            <div class="flex flex-col md:items-center border-3 border-gray-200 rounded-2xl p-5 md:mx-2 lg:mx-4 my-4 lg:my-0">
                                <div class="flex flex-row-reverse md:flex-col md:items-center">
                                    <div>
                                        <p class="font-black text-xl xl:text-2xl md:text-center">
                                            Custom React Component
                                        </p>
                                    </div>
                                <div class="mr-14 md:mr-0">
                                    <img class="w-20 h-16 ml-2 xl:w-24 xl:h-20" src="/public/react_3d.png" alt="React 3D logo" />
                                </div>
                                </div>
                                <div class="flex flex-col md:items-center">
                                    <p class="text-sm md:text-md md:text-center font-medium my-4">
                                        Just need a specific component? <br class="block md:hidden xl:block" /> We can help you with that.
                                    </p>
                                    <button class="h-12 w-3/5 md:w-2/3 bg-stone-900 rounded-full">
                                        <a href="/" class="text-white px-4 py-2">Book a call</a>
                                    </button>                                   
                                </div>
                            </div>
                            <div class="flex flex-col md:items-center border-3 border-gray-200 rounded-2xl p-5 md:mx-2 lg:mx-4 my-4 lg:my-0">
                                <div class="flex flex-row-reverse md:flex-col justify-between items-center">
                                    <div>
                                        <p class="font-black text-xl xl:text-2xl md:text-center">
                                            Custom Native Component
                                        </p>
                                    </div>
                                    <img class="w-28 h-16 mr-2 xl:w-36 xl:h-20" src="/public/modules_3d.png" alt="Kotlin & Swift 3D logos" />
                                </div>
                                <div class="flex flex-col md:items-center">
                                    <p class="text-sm md:text-md md:text-center font-medium my-4">
                                        Need a custom native component? <br class="block md:hidden xl:block" /> We can handle it.
                                    </p>
                                    <button class="h-12 w-3/5 md:w-2/3 bg-stone-900 rounded-full">
                                        <a href="/" class="text-white px-4 py-2">Book a call</a>
                                    </button>                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hidden md:block w-3/6 md:mx-8 lg:mx-16">
				<FooterLabel title="Pricing" />
			</div>
        </div>
    </main>
    <Footer />
</Layout>