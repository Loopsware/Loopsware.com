---
import  SpeedInsights  from "@vercel/speed-insights/astro"
//* Layout
import Layout from '../layouts/Layout.astro';
import NavBar from '../layouts/NavBar.astro';
import Footer from '../layouts/Footer.astro';
//* UI comps.
---

<Layout title="Creative Lab âœ¨">
	<SpeedInsights />
	<NavBar />
	<main>
		<!-- Main section -->
		<div class="flex flex-col justify-center items-center h-[80vh] md:h-[87vh] w-full md:my-12 xl:-my-12">
			<div class="flex flex-col justify-center items-center px-4 md:px-8 lg:px-16">
				<h1 style={{"font-family": "PierSans"}}  class="text-element text-center text-white text-3xl md:text-3xl xl:text-5xl font-black opacity-0 animate-fade-in-up [animation-delay:400ms] p-2">Building <span style={{"font-family": "EditorialNew"}}>Smarter</span> Apps</h1>
				<p style={{"font-family": "PierSans"}} class="text-element text-white text-center font-normal text-xl xl:text-2xl px-2 py-2 md:py-5 opacity-0 animate-fade-in-up [animation-delay:600ms]">
					Now crafting <span class="text-lime-300 font-bold">Vertical AI Agents</span> <br /> for consumer apps.
				</p>
			</div>
			<span class="my-20"></span>
			<div class="flex flex-row justify-center items-center"> 
				<img 
				class="h-56 w-56 md:h-72 md:w-72 my-8 animate-drop transition-all duration-300 absolute z-10" 
				  style={{
    				'shape-rendering': 'geometricPrecision',
    				'image-rendering': 'optimizeQuality'
  				}}
				src="/images/layer_two.svg" 
				alt="apps stack" 
				/>
				<img 
				  class="h-56 w-56 md:h-72 md:w-72 my-16 animate-flip-down transition-all duration-300 absolute" 
				  style={{
    				'shape-rendering': 'geometricPrecision',
    				'image-rendering': 'optimizeQuality'
  				}}
				src="/images/layer_one.svg" 
				alt="apps stack" 
			/>
			</div>
		</div>
	</main>
	<Footer />
</Layout>

<style>
html {
    scroll-behavior: smooth;
}

#scene,
.services-section,
.benefits-section,
#work,
.testimonials-section,
.contact-section,
.faq-section {
  opacity: 0;
}

.show-text {
animation: slideDownFadeIn 0.4s ease-out forwards;
}

@keyframes dropDown {
    0% {
        transform: translateY(-40%);
        opacity: 0;
    }
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes flipDown {
    0% {
        opacity: 0;
        transform: translateY(50px);
    }
    100% {
        opacity: 1;
        transform: translateY(0px);
    }
}

@keyframes glowPulse {
    0% {
        filter: brightness(0.5) radial-gradient(circle, rgba(132, 204, 22, 0.25) 0%, transparent 70%);
    }
    50% {
        filter: brightness(0.9) radial-gradient(circle, rgba(132, 204, 22, 0.6) 30%, transparent 80%);
    }
    100% {
        filter: brightness(0.5) radial-gradient(circle, rgba(132, 204, 22, 0.25) 0%, transparent 70%);
    }
}

.animate-drop {
    opacity: 0;
    animation: dropDown 1.6s ease-out forwards;
    animation-delay: 1s;
}

.animate-flip-down {
    animation: flipDown 1s ease-out forwards;
    transform-style: preserve-3d;
    backface-visibility: hidden;
}

.animate-glow-pulse {
    animation: glowPulse 2s ease-in-out infinite;
    animation-delay: 2.666s;
}
</style>
