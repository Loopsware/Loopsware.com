<nav class="flex items-center justify-between p-6">
  <a href="/">
    <img class="h-7 md:h-7 xl:h-8" src="/public/loopsware_logo.png" alt="loopsware logo" />
  </a>
  <div class="md:hidden">
    <button id="menu-button" class="relative">
      <span id="line1" class="block w-8 h-1 bg-black mb-2 transition-transform duration-200 rounded"></span>
      <span id="line2" class="block w-8 h-1 bg-black transition-transform duration-200 rounded"></span>
    </button>
  </div>
  <div id="menu" class="md:flex items-center md:bg-transparent md:relative md:p-0 hidden absolute top-full left-0 w-full bg-white p-6 transition-transform duration-200">
    <a class="md:text-md lg:text-lg xl:text-xl mx-5" href="/#services">Services</a>
    <a class="md:text-md lg:text-lg xl:text-xl mx-5" href="/#services">Pricing</a>
