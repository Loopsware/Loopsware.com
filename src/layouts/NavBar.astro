</nav>

<script>
  var button = document.getElementById('menu-button');
  var line1 = document.getElementById('line1');
  var line2 = document.getElementById('line2');
  var menu = document.getElementById('menu');

  button.addEventListener('click', function() {
    var isOpen = menu.classList.contains('top-0');

    menu.classList.toggle('top-0', !isOpen);
    menu.classList.toggle('top-full', isOpen);

    line1.classList.toggle('rotate-45', !isOpen);
    line1.classList.toggle('translate-y-3', !isOpen);
    line2.classList.toggle('-rotate-45', !isOpen);
  });
</script>