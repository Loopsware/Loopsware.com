---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Building apps that think" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="https://loopsware.com/images/loopsware_sq_logo.png">
    <meta property="og:title" content="Loopsware | Creative Lab">
    <meta property="og:description" content="Building apps that think" />
    <meta property="og:url" content="https://loopsware.com">
    <meta property="twitter:image" content="https://loopsware.com/images/loopsware_sq_logo.png">
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:title" content="Loopsware | Creative Lab">
    <meta property="twitter:description" content="Building apps that think">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
:root {
	--accent: 136, 58, 234;
	--accent-light: 224, 204, 250;
	--accent-dark: 49, 10, 101;
	--accent-gradient: linear-gradient(
		45deg,
		rgb(var(--accent)),
		rgb(var(--accent-light)) 30%,
		white 60%
	);
}
html {
	font-family: system-ui, sans-serif;
	background: #000;
	background-size: 224px;
	box-sizing: border-box;
	overflow-x: hidden;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

body {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  min-height: 100vh;
}

body::after {
  content: '';
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 380px;
  background: linear-gradient(to bottom, transparent, rgba(218, 255, 138, 0.225));
  pointer-events: none;
}

@font-face {
  font-family: "Grotesque";
  src: url("/fonts/Grotesque-Black.otf");
  font-display: swap;
}

@font-face {
  font-family: "Inter";
  src: url("/fonts/Inter-Regular.otf");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "Inter";
  src: url("/fonts/Inter-SemiBold.otf");
  font-weight: 500;
  font-style: medium;
  font-display: swap;
}

@font-face {
  font-family: "Inter";
  src: url("/fonts/Inter-Bold.otf");
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "Telegraf";
  src: url("/fonts/PPTelegraf-UltraBold.otf");
  font-weight: 700;
  font-style: bold;
  font-display: swap;
}

@font-face {
  font-family: "Telegraf";
  src: url("/fonts/PPTelegraf-Regular.otf");
  font-weight: 400;
  font-style: medium;
  font-display: swap;
}

@font-face {
  font-family: "PierSans-Regular";
  src: url("/fonts/PPPierSans-Regular.otf");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "PierSans-Bold";
  src: url("/fonts/PPPierSans-Bold.otf");
  font-weight: 800;
  font-style: bold;
  font-display: swap;
}

@font-face {
  font-family: "EditorialNew";
  src: url("/fonts/PPEditorialNew-UltraboldItalic.otf");
  font-weight: 800;
  font-style: bold;
  font-display: swap;
}

</style>